<div class="container text-center p-3">
    <div class="car-details p-3">
        <h1><%= @car.brand %></h1>
        <h1><%= @car.model %></h1>
        <% if @car.img %>
         <%= image_tag @car.img, alt: "alttext", class: "mx-auto d-block"%>
        <% else %>
          <%= cl_image_tag @car.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
        <h3>Booked from: <%= @booking.start_date %></h3>
        <p>For a total of <%= @booking.total_days %> days </p>
        <% sumtotal = @car.price_per_day * @booking.total_days %>
        <h3><%= @booking.total_days %> day(s) X at £<%= @car.price_per_day %> per day </h3>
        <h1>Total: £<%= sumtotal %></h1>
    </div>
</div>
