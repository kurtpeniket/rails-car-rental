<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
  <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSaDrZujrERRra0rwVVxk4NxKbb-3XFjberHQ&usqp=CAU", :id => "logo" %>    <% end %>
