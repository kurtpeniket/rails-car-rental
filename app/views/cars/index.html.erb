<h1 class="text-center pt-5">All cars</h1>

<div class="container p-3 mt-5">
  <div class="cars">
    <% @cars.each do |car| %>
    <div class="card-trip">
      <% if car.img %>
        <%= image_tag car.img, alt: "alttext", class: "mx-auto d-block"%>
      <% else %>
        <%= cl_image_tag car.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
      <div class="card-trip-infos">
        <h2><%= link_to car.brand, car_path(car) %></h2>
        <h2><%= car.model%></h2>
      </div>
    </div>
    <% end %>
  </div>
</div>

