<h1 class="text-center pt-5">All cars</h1>

<div class="container p-3 mt-5">
  <div class="cars">
    <% @cars.each do |car| %>
    <div class="card-trip">
      <% if car.img != nil %>
        <%= link_to image_tag(car.img, alt: "alttext", class: "mx-auto d-block"), car_path(car)%>
      <% elsif car.photo.attached? %>
        <%= link_to (cl_image_tag car.photo.key, height: 300, width: 400, crop: :fill), car_path(car) %>
      <% else %>
        <%= image_tag 'p1.jpg', alt: "alttext", class: "mx-auto d-block"%>
      <% end %>
      <div class="card-trip-infos">
        <h2><%= car.brand %></h2>
        <h2><%= car.model %></h2>
      </div>
    </div>
    <% end %>
  </div>
</div>

