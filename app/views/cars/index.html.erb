<!-- search bar -->
<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2 pt-4">
      <%= form_tag cars_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search here...."
         %>
         <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
      </div>
    </div>
  </div>
</div>


<div id="map-container">
  <div class="container p-3 mt-5">
  <h1 class="text-center pt-5">All cars</h1>
    <div class="cars">
      <% @cars.each do |car| %>
      <div class="card-trip">
        <% if car.img != nil %>
          <%= link_to image_tag(car.img, alt: "alttext", class: "mx-auto d-block"), car_path(car)%>
        <% elsif car.photo.attached? %>
          <%= link_to (cl_image_tag car.photo.key), car_path(car) %>
        <% else %>
          <%= image_tag 'p1.jpg', alt: "alttext", class: "mx-auto d-block rounded"%>
        <% end %>
        <div class="card-trip-infos">
          <h2><%= car.brand %></h2>
          <h2><%= car.model %></h2>
        </div>
      </div>
      <% end %>
    </div>
  </div>

 <div id="map"
     style="width: 75%; height: 700px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>

