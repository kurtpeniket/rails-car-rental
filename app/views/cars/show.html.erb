<div class="container show my-3">
  <div class="card car-details">
    <h1><%= @car.brand %></h1>
    <h2><%= @car.model %></h2>
      <%= image_tag @car.img, alt: "car-img", :width => "50%" %>
    <h4>Â£<%=@car.price_per_day %> per day</h4>
  </div>
